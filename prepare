# prepare EC2 instance for use with k3d
# install k3d:
wget -q -O - https://raw.githubusercontent.com/rancher/k3d/main/install.sh | bash
#
# install docker (ubuntu snap in ubuntu)
sudo snap install docker 
#
# install kubectl (using snap in ubuntu)
sudo snap install kubectl --classic
#
# adding . to PATH to avoind typing ./
export PATH=$PATH:.
#
reboot server
sudo -r shutdown +15 "this server-instances will be rebootet soon!"
